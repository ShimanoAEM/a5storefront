<view class="page centerPage-wrap" id="userCenterPage" data-router="userCenterPage">
  <view class="centerPage-user-info">
    <view class="js-change-cover">
      <image class="cover-thumb" src="{{userInfo.avatarUrl}}"></image>
      <label class="ico-moon icon-rightarrow"></label>
    </view>
  </view>
  <form bindsubmit="saveUserInfo">
    <view class="centerPage-user-info">
      <view class="centerPage-info-item">
        <label>姓名</label>
        <input class="userCenter-tel" placeholder="请输入您的名字" value="{{user.name}}" name="name"/>
      </view>
      <view class="centerPage-info-item">
        <label>手机号</label>
        <input class="userCenter-tel" placeholder="请输入您的手机号" value="{{user.mobileNum}}" name="mobileNum" />
      </view>
      <view class="centerPage-info-item">
        <label>项目名</label>
        <input class="userCenter-tel" placeholder="请输入您的项目名" value="{{user.project}}" name="project"/>
      </view>
      <view class="centerPage-info-item">
        <label>座位号</label>
        <input class="userCenter-tel" placeholder="请输入您的座位号" value="{{user.seat}}" name="seat"/>
      </view>
      <view class="centerPage-info-item">
        <label>微信号</label>
        <input class="userCenter-tel" placeholder="请输入您的微信号" value="{{user.wechatCode}}" name="wechatCode"/>
      </view>
    </view>
    <button class="centerPage-save-btn" formType="submit">修改</button>
</form>
</view>
