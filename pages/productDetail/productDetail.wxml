<view class="goods-detail-wrap">
  <view class="goods-detail-content">
    <view class="goods-detail-section">
      <view class="slick-carousel-container">
        <swiper autoplay="" circular="" duration="1000" interval="5000" current="0">
          <swiper-item style="transform: translate(0%, 0%) translateZ(0px); will-change: auto; position: absolute; width: 100%; height: 100%;">
            <image class="list-img" mode="scaleToFill" src="{{serverurl}}{{product.image}}" style="width:100%;height:100%;margin-left:auto;"></image>
          </swiper-item>
        </swiper>
      </view>
      <view class="goods-header">
        <view class="goods-title">浏览次数:{{product.viewNum}}</view>
        <view class="goods-title">产品名称:{{product.name}}</view>
        <view class="goods-price">
          <view class="goods-current-price">
            <text class="promotionPrice">原价:¥{{product.originalPrice}}</text>
            <text>\t\t</text>
            <text style="font-weight:bold; font-size:20px;">现价:¥{{product.price}}</text>
          </view>
        </view>
      </view>
       <view wx:if="{{checkCollect == false}}">
       <form bindsubmit="addCollect">
        <input hidden="true" name="productOpenId" type="text" value="{{product.openId}}"></input>
        <view>
          <button class="btn btn-orange buy-goods-directly" form-type="submit">关注卖方</button>
        </view>
        </form>
       </view>
       <view wx:if="{{checkCollect == true}}">
       <form bindsubmit="removeCollect">
        <input hidden="true" name="productOpenId" type="text" value="{{product.openId}}"></input>
        <view>
          <button class="btn btn-orange buy-goods-directly" form-type="submit">取消关注</button>
        </view>
        </form>
      </view>
    </view>
    <view style="padding: 10px;text-align:center;background:#f4f4f4;color:#b2b2b2;font-size:12px;" hidden="">
      <view class="goods-detail-section">
